@model List<HastaneRandevuSistemiSon.Models.Randevu>



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@_localization.Getkey("Hastane Randevu Sistemi")</title>
    <link rel="stylesheet" href="node_modules/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .carousel-image {
            width: 100%;
            height: 100vh;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home">@_localization.Getkey("Hastane Randevu Sistemi")</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/Home">@_localization.Getkey("Ana Sayfa")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">@_localization.Getkey("Randevu Al")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Randevus">@_localization.Getkey("Randevular")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Hastalisk">@_localization.Getkey("Hastalıklar")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Doktors">@_localization.Getkey("Doktorlar")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Birims">@_localization.Getkey("Birimler")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Polikliniks">@_localization.Getkey("Poliklinikler")</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <h2>@_localization.Getkey("Randevular")</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
       <tr>
        <th>Id</th>
        <th>Date</th>
        <th>HastaIsim</th>
        <th>DoktorIsim</th>
       </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hasta.Isim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doktor.Isim)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>